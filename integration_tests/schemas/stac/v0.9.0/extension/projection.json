{
    "$id": "schema.json#",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "allOf": [
        {
            "$ref": "https://cdn.staclint.com/master/item.json"
        },
        {
            "$ref": "#/definitions/proj"
        }
    ],
    "definitions": {
        "proj": {
            "properties": {
                "properties": {
                    "properties": {
                        "proj:bbox": {
                            "items": {
                                "type": "number"
                            },
                            "maxItems": 6,
                            "minItems": 4,
                            "title": "Extent",
                            "type": "array"
                        },
                        "proj:centroid": {
                            "properties": {
                                "lat": {
                                    "maximum": 90,
                                    "minimum": -90,
                                    "type": "number"
                                },
                                "lon": {
                                    "maximum": 180,
                                    "minimum": -180,
                                    "type": "number"
                                }
                            },
                            "required": [
                                "lat",
                                "lon"
                            ],
                            "title": "Centroid",
                            "type": "object"
                        },
                        "proj:epsg": {
                            "title": "EPSG code",
                            "type": [
                                "integer",
                                "null"
                            ]
                        },
                        "proj:geometry": {
                            "oneOf": [
                                {
                                    "$ref": "https://geojson.org/schema/Polygon.json"
                                }
                            ],
                            "title": "Geometry"
                        },
                        "proj:proj4": {
                            "title": "Coordinate Reference System in PROJ4 format",
                            "type": [
                                "string",
                                "null"
                            ]
                        },
                        "proj:projjson": {
                            "oneOf": [
                                {
                                    "$ref": "https://proj.org/schemas/v0.1/projjson.schema.json"
                                },
                                {
                                    "type": "null"
                                }
                            ],
                            "title": "Coordinate Reference System in PROJJSON format"
                        },
                        "proj:wkt2": {
                            "title": "Coordinate Reference System in WKT2 format",
                            "type": [
                                "string",
                                "null"
                            ]
                        }
                    },
                    "required": [
                        "proj:epsg"
                    ],
                    "type": "object"
                }
            },
            "required": [
                "properties"
            ],
            "type": "object"
        }
    },
    "description": "STAC Projection Extension to a STAC Item",
    "title": "Projection Extension"
}