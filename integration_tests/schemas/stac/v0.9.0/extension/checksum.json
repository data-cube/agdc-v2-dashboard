{
    "$id": "schema.json#",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "allOf": [
        {
            "$ref": "https://cdn.staclint.com/master/item.json#definitions/core"
        },
        {
            "$ref": "#/definitions/checksum"
        }
    ],
    "definitions": {
        "checksum": {
            "properties": {
                "assets": {
                    "patternProperties": {
                        ".+": {
                            "$ref": "#/definitions/checksums"
                        }
                    },
                    "title": "Assets",
                    "type": "object"
                },
                "links": {
                    "items": {
                        "$ref": "#/definitions/checksums"
                    },
                    "title": "Links",
                    "type": "array"
                }
            },
            "type": "object"
        },
        "checksums": {
            "properties": {
                "checksum:multihash": {
                    "pattern": "^[a-f0-9]+$",
                    "title": "Multihash",
                    "type": "string"
                }
            },
            "type": "object"
        }
    },
    "description": "STAC Checksum Extension to a STAC Item",
    "title": "Checksum Extension Specification"
}