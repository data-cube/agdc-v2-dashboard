{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "stac-label-item-schema.json#",
    "properties": {
        "properties": {
            "properties": {
                "label:classes": {
                    "items": {
                        "properties": {
                            "classes": {
                                "items": {
                                    "type": "string"
                                },
                                "title": "Classes",
                                "type": "array"
                            },
                            "name": {
                                "title": "Name",
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "classes"
                        ],
                        "type": "object"
                    },
                    "title": "Classes",
                    "type": "array"
                },
                "label:description": {
                    "title": "Description",
                    "type": "string"
                },
                "label:methods": {
                    "items": {
                        "enum": [
                            "automated",
                            "manual"
                        ],
                        "type": "string"
                    },
                    "title": "Method",
                    "type": "array"
                },
                "label:overviews": {
                    "items": {
                        "properties": {
                            "counts": {
                                "items": {
                                    "properties": {
                                        "count": {
                                            "title": "Count",
                                            "type": "integer"
                                        },
                                        "name": {
                                            "title": "Class Name",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                },
                                "title": "Counts",
                                "type": "array"
                            },
                            "property_key": {
                                "title": "Property Key",
                                "type": "string"
                            },
                            "statistics": {
                                "items": {
                                    "properties": {
                                        "name": {
                                            "title": "Stat Name",
                                            "type": "string"
                                        },
                                        "value": {
                                            "title": "Value",
                                            "type": "number"
                                        }
                                    },
                                    "type": "object"
                                },
                                "title": "Statistics",
                                "type": "array"
                            }
                        },
                        "type": "object"
                    },
                    "title": "Overview",
                    "type": "array"
                },
                "label:properties": {
                    "items": {
                        "type": "string"
                    },
                    "title": "Property",
                    "type": "array"
                },
                "label:tasks": {
                    "items": {
                        "type": "string"
                    },
                    "title": "Task",
                    "type": "array"
                },
                "label:type": {
                    "enum": [
                        "raster",
                        "vector"
                    ],
                    "title": "Type",
                    "type": "string"
                }
            },
            "required": [
                "label:properties",
                "label:classes",
                "label:description"
            ],
            "type": "object"
        }
    },
    "title": "STAC Label Data Item Extension Spec",
    "type": "object"
}