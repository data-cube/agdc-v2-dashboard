{
    "$id": "schema.json#",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "scientific": {
            "properties": {
                "sci:citation": {
                    "title": "Proposed Data Citation",
                    "type": "string"
                },
                "sci:doi": {
                    "pattern": "^(10[.][0-9]{4,}(?:[.][0-9]+)*/(?:(?![%\"#? ])\\S)+)$",
                    "title": "Data DOI",
                    "type": "string"
                },
                "sci:publications": {
                    "items": {
                        "properties": {
                            "citation": {
                                "title": "Publication Citation",
                                "type": "string"
                            },
                            "doi": {
                                "pattern": "^(10[.][0-9]{4,}(?:[.][0-9]+)*/(?:(?![%\"#? ])\\S)+)$",
                                "title": "Publication DOI",
                                "type": "string"
                            }
                        },
                        "type": "object"
                    },
                    "title": "Publications",
                    "type": "array"
                }
            },
            "type": "object"
        }
    },
    "description": "STAC Scientific Extension to STAC Items or STAC Collections.",
    "oneOf": [
        {
            "allOf": [
                {
                    "$ref": "https://cdn.staclint.com/master/item.json"
                },
                {
                    "properties": {
                        "properties": {
                            "$ref": "#/definitions/scientific"
                        }
                    },
                    "required": [
                        "properties"
                    ],
                    "type": "object"
                }
            ]
        },
        {
            "allOf": [
                {
                    "$ref": "https://cdn.staclint.com/master/collection.json"
                },
                {
                    "$ref": "#/definitions/scientific"
                }
            ]
        }
    ],
    "title": "Scientific Extension"
}