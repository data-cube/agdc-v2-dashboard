{
    "$id": "schema.json#",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "allOf": [
        {
            "$ref": "https://cdn.staclint.com/master/item.json"
        },
        {
            "$ref": "#/definitions/sar"
        }
    ],
    "definitions": {
        "sar": {
            "properties": {
                "assets": {
                    "additionalProperties": {
                        "properties": {
                            "sar:polarizations": {
                                "items": {
                                    "enum": [
                                        "HH",
                                        "VV",
                                        "HV",
                                        "VH"
                                    ],
                                    "type": "string"
                                },
                                "minItems": 1,
                                "title": "Polarizations",
                                "type": "array"
                            }
                        },
                        "type": "object"
                    },
                    "type": "object"
                },
                "properties": {
                    "properties": {
                        "sar:center_frequency": {
                            "title": "Center Frequency (GHz)",
                            "type": "number"
                        },
                        "sar:frequency_band": {
                            "enum": [
                                "P",
                                "L",
                                "S",
                                "C",
                                "X",
                                "Ku",
                                "K",
                                "Ka"
                            ],
                            "title": "Frequency Band",
                            "type": "string"
                        },
                        "sar:instrument_mode": {
                            "example": "WV",
                            "title": "Instrument Mode",
                            "type": "string"
                        },
                        "sar:looks_azimuth": {
                            "minimum": 0,
                            "title": "Looks azimuth",
                            "type": "integer"
                        },
                        "sar:looks_equivalent_number": {
                            "minimum": 0,
                            "title": "Equivalent number of looks (ENL)",
                            "type": "number"
                        },
                        "sar:looks_range": {
                            "minimum": 0,
                            "title": "Looks range",
                            "type": "integer"
                        },
                        "sar:observation_direction": {
                            "enum": [
                                "left",
                                "right"
                            ],
                            "title": "Antenna pointing direction",
                            "type": "string"
                        },
                        "sar:pixel_spacing_azimuth": {
                            "minimum": 0,
                            "title": "Pixel spacing azimuth (m)",
                            "type": "number"
                        },
                        "sar:pixel_spacing_range": {
                            "minimum": 0,
                            "title": "Pixel spacing range (m)",
                            "type": "number"
                        },
                        "sar:polarizations": {
                            "items": {
                                "enum": [
                                    "HH",
                                    "VV",
                                    "HV",
                                    "VH"
                                ],
                                "type": "string"
                            },
                            "maxItems": 4,
                            "minItems": 1,
                            "title": "Polarizations",
                            "type": "array",
                            "uniqueItems": true
                        },
                        "sar:product_type": {
                            "examples": [
                                "SSC",
                                "MGD",
                                "SGC"
                            ],
                            "title": "Product type",
                            "type": "string"
                        },
                        "sar:resolution_azimuth": {
                            "minimum": 0,
                            "title": "Resolution azimuth (m)",
                            "type": "number"
                        },
                        "sar:resolution_range": {
                            "minimum": 0,
                            "title": "Resolution range (m)",
                            "type": "number"
                        }
                    },
                    "required": [
                        "sar:instrument_mode",
                        "sar:frequency_band",
                        "sar:polarizations",
                        "sar:product_type"
                    ],
                    "type": "object"
                }
            },
            "required": [
                "properties",
                "assets"
            ],
            "type": "object"
        }
    },
    "description": "STAC SAR Extension to a STAC Item",
    "title": "SAR Extension"
}