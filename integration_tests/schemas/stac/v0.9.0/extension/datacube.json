{
    "$id": "schema.json#",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "datacube": {
            "properties": {
                "cube:dimensions": {
                    "additionalProperties": {
                        "anyOf": [
                            {
                                "$ref": "#/definitions/objects/additional_dimension"
                            },
                            {
                                "$ref": "#/definitions/objects/horizontal_spatial_dimension"
                            },
                            {
                                "$ref": "#/definitions/objects/vertical_spatial_dimension"
                            },
                            {
                                "$ref": "#/definitions/objects/temporal_dimension"
                            }
                        ]
                    },
                    "type": "object"
                }
            },
            "required": [
                "cube:dimensions"
            ],
            "type": "object"
        },
        "fields": {
            "axis_xy": {
                "enum": [
                    "x",
                    "y"
                ],
                "type": "string"
            },
            "axis_z": {
                "const": "z",
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "extent_closed": {
                "items": {
                    "type": "number"
                },
                "maxItems": 2,
                "minItems": 2,
                "type": "array"
            },
            "extent_open": {
                "items": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "maxItems": 2,
                "minItems": 2,
                "type": "array"
            },
            "reference_system_spatial": {
                "default": 4326,
                "type": [
                    "string",
                    "number",
                    "object"
                ]
            },
            "step": {
                "type": [
                    "number",
                    "null"
                ]
            },
            "type_spatial": {
                "const": "spatial",
                "type": "string"
            },
            "unit": {
                "type": "string"
            },
            "values": {
                "items": {
                    "oneOf": [
                        {
                            "type": "number"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "minItems": 1,
                "type": "array"
            },
            "values_numeric": {
                "items": {
                    "type": "number"
                },
                "minItems": 1,
                "type": "array"
            }
        },
        "objects": {
            "additional_dimension": {
                "anyOf": [
                    {
                        "required": [
                            "type",
                            "extent"
                        ]
                    },
                    {
                        "required": [
                            "type",
                            "values"
                        ]
                    }
                ],
                "not": {
                    "required": [
                        "axis"
                    ]
                },
                "properties": {
                    "description": {
                        "$ref": "#/definitions/fields/description"
                    },
                    "extent": {
                        "$ref": "#/definitions/fields/extent_open"
                    },
                    "reference_system": {
                        "type": "string"
                    },
                    "step": {
                        "$ref": "#/definitions/fields/step"
                    },
                    "type": {
                        "allOf": [
                            {
                                "type": "string"
                            },
                            {
                                "not": {
                                    "const": "spatial",
                                    "type": "string"
                                }
                            }
                        ]
                    },
                    "unit": {
                        "$ref": "#/definitions/fields/unit"
                    },
                    "values": {
                        "$ref": "#/definitions/fields/values"
                    }
                },
                "title": "Additional Dimension Object",
                "type": "object"
            },
            "horizontal_spatial_dimension": {
                "properties": {
                    "axis": {
                        "$ref": "#/definitions/fields/axis_xy"
                    },
                    "description": {
                        "$ref": "#/definitions/fields/description"
                    },
                    "extent": {
                        "$ref": "#/definitions/fields/extent_closed"
                    },
                    "reference_system": {
                        "$ref": "#/definitions/fields/reference_system_spatial"
                    },
                    "step": {
                        "$ref": "#/definitions/fields/step"
                    },
                    "type": {
                        "$ref": "#/definitions/fields/type_spatial"
                    },
                    "values": {
                        "$ref": "#/definitions/fields/values_numeric"
                    }
                },
                "required": [
                    "type",
                    "axis",
                    "extent"
                ],
                "title": "Horizontal Spatial Dimension Object",
                "type": "object"
            },
            "temporal_dimension": {
                "not": {
                    "required": [
                        "axis"
                    ]
                },
                "properties": {
                    "description": {
                        "$ref": "#/definitions/fields/description"
                    },
                    "extent": {
                        "items": {
                            "type": [
                                "string",
                                "null"
                            ]
                        },
                        "maxItems": 2,
                        "minItems": 2,
                        "type": "array"
                    },
                    "step": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "type": {
                        "const": "temporal",
                        "type": "string"
                    },
                    "values": {
                        "items": {
                            "type": "string"
                        },
                        "minItems": 1,
                        "type": "array"
                    }
                },
                "required": [
                    "type",
                    "extent"
                ],
                "title": "Temporal Dimension Object",
                "type": "object"
            },
            "vertical_spatial_dimension": {
                "anyOf": [
                    {
                        "required": [
                            "type",
                            "axis",
                            "extent"
                        ]
                    },
                    {
                        "required": [
                            "type",
                            "axis",
                            "values"
                        ]
                    }
                ],
                "properties": {
                    "axis": {
                        "$ref": "#/definitions/fields/axis_z"
                    },
                    "description": {
                        "$ref": "#/definitions/fields/description"
                    },
                    "extent": {
                        "$ref": "#/definitions/fields/extent_open"
                    },
                    "reference_system": {
                        "$ref": "#/definitions/fields/reference_system_spatial"
                    },
                    "step": {
                        "$ref": "#/definitions/fields/step"
                    },
                    "type": {
                        "$ref": "#/definitions/fields/type_spatial"
                    },
                    "unit": {
                        "$ref": "#/definitions/fields/unit"
                    },
                    "values": {
                        "$ref": "#/definitions/fields/values"
                    }
                },
                "title": "Vertical Spatial Dimension Object",
                "type": "object"
            }
        }
    },
    "description": "STAC Data Cube Extension to STAC Items and STAC Collections",
    "oneOf": [
        {
            "allOf": [
                {
                    "$ref": "https://cdn.staclint.com/master/item.json"
                },
                {
                    "properties": {
                        "properties": {
                            "$ref": "#/definitions/datacube"
                        }
                    },
                    "required": [
                        "properties"
                    ],
                    "type": "object"
                }
            ]
        },
        {
            "allOf": [
                {
                    "$ref": "https://cdn.staclint.com/master/collection.json"
                },
                {
                    "$ref": "#/definitions/datacube"
                }
            ]
        }
    ],
    "title": "Data Cube Extension"
}